
<article>
    <form action="/auth/sessions/trueChangePassword" method="post" enctype="application/x-www-form-urlencoded">
        <header>
            <h1>Reset your Password</h1>
        </header>
        <input type="hidden" name="uid" value="{{ uid }}">
        <input type="password" placeholder="New password" id="password" name="password" required>
        <button type="submit" class="buttonForm">Change</button>
    </form>
</article> 

